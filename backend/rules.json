{
  "rules": {
    "Products": {
      "$product_id": {
        ".read": "data.child('user_id').val() === auth.uid",
        ".write": "!data.exists() || data.child('user_id').val() === auth.uid"
      }
    },
    "Orders": {
      "$order_id": {
        ".read": "data.child('user_id').val() === auth.uid",
        ".write": "!data.exists() || data.child('user_id').val() === auth.uid"
      }
    },
    "Users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "PublicUsers": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}
